<h1>Register As A Brewer!</h1>

<%= form_for(@user) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, placeholder: "Password" %>

  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "Password" %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, placeholder: "Please confirm password"%>

  <%= f.submit "Create Brewer Account"%>

<% end %>
